  <div id="navigation">
        <ul>
          <li class="bar">Home</li>
          <li class="bar">About</li>
          <li class="bar">Gallery</li>
          <li class="bar">Specials</li>
          <li class="bar">Store</li>
          <li class="bar">Products</li>
          <li class="bar">News&Info</li>
          <li class="bar">Travel</li>
          <li class="bar">Find Us!</li>
        </ul>
          <hr>
      </div>

  <body ng-controller="main">

    <div class="">

    </div>


    <h2 class="header">Electric Ladyland</h2>

    <div class="row">
        <form ng-submit="create()">
            <input type="text" ng-model="newProduct.name" value="" placeholder="...strain">
            <input type="text" ng-model="newProduct.description" value="" placeholder="...description">
            <input type="text" ng-model="newProduct.rating" value="" placeholder="...rating">
            <button type="submit" name="button">Save</button>
        </form>
    </div>


    <ul>
      <li ng-repeat="product in products">
        <p>name:{{ product.name}}, <br>description:{{product.description}}, <br>rating:{{product.rating}}</p>

        <a href="#" ng-click="delete(product._id)">Delete</a>
      </li>
    </ul>


  </body>
</html>
